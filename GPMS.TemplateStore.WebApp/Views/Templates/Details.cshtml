@{
    ViewData["Title"] = "Home";
}

@using GPMS.TemplateStore.Logic.Templates
@model TemplateDto

<div class="single contact">
    <div class="container">
        <div class="row">
            
            <div class="col-md-4">
                <div class="flexslider">
                    <ul class="slides">
                        <li>
                            <img src="@Model.PreviewImageUrl" data-imagezoom="true" class="img-responsive" alt=""/>
                        </li>
                    </ul>
                </div>

                <ul class="list-group">
                    <li class="list-group-item disabled">LINKS</li>
                    <li class="list-group-item">xxx</li>
                    <li class="list-group-item">yyy</li>
                    <li class="list-group-item">zzz</li>
                    <li class="list-group-item">www</li>
                </ul>
            </div>

            <div class="col-md-5">
                <h2>@Model.Name</h2>
                <div class="star-on">
                    <ul class="star-footer">
                        <li><a href="#"><i> </i></a></li>
                        <li><a href="#"><i> </i></a></li>
                        <li><a href="#"><i> </i></a></li>
                        <li><a href="#"><i> </i></a></li>
                        <li><a href="#"><i> </i></a></li>
                    </ul>
                </div>
                <br/>
                <br/>
                <p>@Model.Description</p>
            </div>

            <div class="col-md-3" >
                <ul class="list-group">
                    <li class="list-group-item disabled">Buy</li>
                    <li class="list-group-item">
                        <h4>FREE</h4>
                        <h5><b>Tipo do documento:</b> @Model.FileType</h5>
                    </li>
                    <li class="list-group-item active">add to cart</li>
                </ul>
            </div>

        </div>
    </div>
</div>

<!-- FlexSlider -->
<script src="~/js/imagezoom.js"></script>
<script defer src="~/js/jquery.flexslider.js"></script>
<link rel="stylesheet" href="~/css/flexslider.css" type="text/css" media="screen"/>
<script>
    // Can also be used with $(document).ready()
    $(window).load(function() {
        $('.flexslider').flexslider({
            animation: "slide",
            controlNav: "thumbnails"
        });
    });
</script>